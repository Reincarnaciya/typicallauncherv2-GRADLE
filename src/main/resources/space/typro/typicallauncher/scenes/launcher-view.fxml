<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="mainPane" prefWidth="800.0" styleClass="launcher-root" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="space.typro.typicallauncher.controllers.scenes.LauncherController">

    <!-- Title bar with window controls -->
    <HBox alignment="CENTER_RIGHT" prefHeight="21.0" prefWidth="800.0" spacing="8" styleClass="title-bar">
        <children>
            <Pane fx:id="hideLauncherButton" prefHeight="24" prefWidth="24" styleClass="window-button minimize-button" />
            <Pane fx:id="exitButton" prefHeight="24" prefWidth="24" styleClass="window-button close-button" />
        </children>
        <padding>
            <Insets bottom="12" left="12" right="12" top="12" />
        </padding>
    </HBox>

    <!-- Main content area -->
    <AnchorPane prefHeight="600" prefWidth="850" styleClass="main-content-pane">
        <!-- Left navigation pane -->
        <AnchorPane fx:id="leftPane" prefHeight="600.0" prefWidth="0.0" styleClass="navigation-pane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
            <VBox prefHeight="600.0" prefWidth="80.0" styleClass="nav-icons-container">
                <padding>
                    <Insets bottom="16" left="16" right="16" top="36" />
                </padding>
                <children>
                    <Pane fx:id="accountLeftPane" styleClass="nav-icon" />
                    <Pane fx:id="newsLeftPane" styleClass="nav-icon" />
                    <Pane fx:id="forumLeftPane" styleClass="nav-icon" />
                    <Pane fx:id="friendsLeftPane" styleClass="nav-icon" />
                    <Pane fx:id="settingsLeftPane" styleClass="nav-icon" />
                    <Pane fx:id="playLeftPane" prefHeight="55.0" prefWidth="48.0" styleClass="nav-icon play-icon" />
                </children>
            </VBox>
        </AnchorPane>

        <!-- Right content area -->
        <AnchorPane styleClass="content-area" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="70" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <VBox fx:id="textVBox" spacing="20" styleClass="anchor-pane-fill" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <children>
                    <Text fx:id="upperText" styleClass="header-text" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                    <AnchorPane fx:id="lineBelowText" prefHeight="1" styleClass="text-divider" HBox.hgrow="ALWAYS" />
                    <Pane fx:id="subscene" styleClass="subscene-container" />
                </children>
            </VBox>
        </AnchorPane>
    </AnchorPane>
</VBox>
