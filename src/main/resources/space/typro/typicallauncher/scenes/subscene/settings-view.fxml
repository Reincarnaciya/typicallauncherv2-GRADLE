<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@../../styles.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="space.typro.typicallauncher.controllers.scenes.subscenes.SettingsController"
            styleClass="anchor-pane-fill">
   <children>
      <VBox spacing="20.0" styleClass="settings-container" AnchorPane.topAnchor="0"
            AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0">
         <!-- RAM Slider + TextField -->
         <HBox styleClass="ram-control">
            <Slider fx:id="ramSlider" blockIncrement="512.0" majorTickUnit="1.0" max="4.0" min="1.0"
                    minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
            <TextField fx:id="ramTextField" editable="false" text="32GB" styleClass="ram-text-field" />
            <padding>
               <Insets top="5.0" />
            </padding>
         </HBox>

         <!-- Resolution Inputs & Fullscreen -->
         <HBox spacing="5.0" styleClass="resolution-fullscreen">
            <TextField fx:id="widthTextField" promptText="800" styleClass="resolution-input" />
            <Text text="x" styleClass="resolution-separator" />
            <TextField fx:id="heightTextField" promptText="600" styleClass="resolution-input" />
            <CheckBox fx:id="fullscreenCheckBox" mnemonicParsing="false" text="Полноэкранный режим" />
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
         </HBox>

         <!-- Hide Launcher & Open Folder Button -->
         <HBox alignment="CENTER" spacing="10.0" styleClass="launcher-options">
            <CheckBox fx:id="hideLauncherCheckBox" mnemonicParsing="false" text="Свернуть лаунчер при старте" />
            <Button fx:id="openLauncherFolderButton" mnemonicParsing="false" text="Открыть папку лаунчера" />
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
         </HBox>

         <!-- Client Path -->
         <VBox spacing="5.0" styleClass="client-path-section">
            <Text text="Путь до папки с клиентами:" styleClass="path-label" />
            <Hyperlink fx:id="clientPathHyperlink" text="C://" styleClass="client-path-link" />
            <padding>
               <Insets left="10.0" />
            </padding>
         </VBox>

         <!-- Save & Reset Buttons -->
         <VBox alignment="TOP_RIGHT" spacing="10.0" styleClass="action-buttons">
            <Button fx:id="saveButton" mnemonicParsing="false" text="Сохранить" />
            <Button fx:id="resetButton" mnemonicParsing="false" text="Сбросить" />
         </VBox>

         <!-- Launcher Version -->
         <Text fx:id="launcherVersionText" text="Версия лаунчера:" styleClass="version-text" />
      </VBox>
   </children>
</AnchorPane>