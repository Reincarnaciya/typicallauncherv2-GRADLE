<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="space.typro.typicallauncher.controllers.NewsArticleController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      styleClass="news-article">

    <!-- Заголовок и метаданные -->
    <HBox alignment="CENTER_LEFT" spacing="8">
        <VBox>
            <Label fx:id="titleLabel" styleClass="article-title" />

            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="meta-container">
                <Label fx:id="tagLabel" styleClass="article-tag" />
                <Label text="•" styleClass="meta-separator" />
                <Label fx:id="dateLabel" styleClass="article-date" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Описание -->
    <Label fx:id="descriptionLabel" styleClass="article-description" wrapText="true" />

    <!-- Список изменений -->
    <VBox spacing="8">
        <Label text="Changes:" styleClass="changes-header" />
        <VBox fx:id="changesContainer" spacing="4" styleClass="changes-list" />
    </VBox>
</VBox>